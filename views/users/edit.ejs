<%-include("../partials/header")%>
<div class="row">
  <h1 style="text-align: center;">Edit Profile</h1>
  <div style="width: 30%; margin: 25px auto;">
    <form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" type="text" disabled name="username" value="<%= user.username %>" autocomplete="off" required />
      </div>
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input class="form-control" type="text" name="firstName" value="<%= user.firstName %>" autocomplete="off" required />
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input class="form-control" type="text" name="lastName" value="<%= user.lastName %>" autocomplete="off" required />
      </div>
	  <div class="form-group">
        <label for="image"> Update Profile Photo</label>
        <input id="image" type="file" name="image" accept="image/*" autocomplete="off" />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="email" value="<%= user.email %>" autocomplete="off" required />
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Update Profile</button>
      </div>
    </form>
    <hr>
    <a href="/password_reset">Reset password</a>
    <hr>
    <a href="/users/<%= user._id %>">Back</a>
  </div>
</div>
<%-include("../partials/footer") %>