<%-include("../partials/header")%>
  <div class="row">
    <div class="col-md-4">
      <h2><%= user.firstName + " " + user.lastName %></h2>
      <div class="thumbnail">
        <img src="<%= user.avatar.url %>" alt="user profile image">
        <div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
      </div>
    </div>
    <div class="col-md-8">
        <h3><%= user.username %>'s corners</h3>
        <% corners.forEach(corner => { %>
          <div class="col-md-4 col-sm-6">
            <div class="thumbnail card">
              <img src="<%= corner.image.url %>" alt="<%= corner.name %>">
              <div class="caption">
                <h4 class="caption"><a href="/corners/<%= corner.id %>"><%= corner.name %></a></h4>
              </div>
            </div>
          </div>
        <% }); %>
      </ul>
    </div>
    <% if (currentUser && user._id.equals(currentUser._id)) {%>
      <a href="/users/<%= user._id%>/edit">Edit Profile</a>
    <% } %>
  </div>
<%-include("../partials/footer")%>